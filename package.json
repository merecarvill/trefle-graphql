{
  "name": "trefle-graphql",
  "description": "A graphQL wrapper of the Trefle API",
  "author": {
    "name": "scarvill91",
    "url": "https://github.com/scarvill91"
  },
  "license": "ISC",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "lint": "eslint index.js src",
    "lint:fix": "npm run lint -- --fix"
  },
  "dependencies": {
    "apollo-datasource-rest": "^0.10.0",
    "apollo-server": "^2.21.1",
    "graphql": "^15.5.0"
  },
  "devDependencies": {
    "eslint": "^7.22.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "double"
      ],
      "semi": [
        "error",
        "never"
      ],
      "eol-last": [
        "error",
        "always"
      ]
    }
  }
}